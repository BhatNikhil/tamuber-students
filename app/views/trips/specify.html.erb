<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <%= javascript_include_tag "specify" %>
</head>
<body>
  <header>
    <h1>TAMUber Students</h1>
  </header>
  <main>
    <h1>Cart Requirements</h1>
    
    <p>Please select your pick up and destination.</p>
  
    <%= form_tag("/trips/new", method: "post", id: "route_specs") do |form| %>
      <%= hidden_field_tag "routeData" %>
      <div class="form-group">
        <label for="source">Pickup</label>:
        <select id="source" class="form-control" name="source">
          <option> </option>
          <% @places.each do |point| %>
            <option><%= point %></option>
          <% end %>
        </select>
      </div>
      
      <div class="form-group">
        <label for="destination">Destination</label>:
        <select id="destination" class="form-control" name="destination">
          <option> </option>
          <% @places.each do |point| %>
            <option><%= point %></option>
          <% end %>
        </select>
      </div>
      
      <div class="form-group">
        <div class="form-check">
          <label for="handicap_access" class="form-check-label">
            Require handicap access:
            <input id="handicap_access" class="form-check-input" name="handicap_access" type="checkbox" />
          </label>
        </div>
      </div>
      <input type="submit" class="btn btn-primary" id="findRide" value='Find a ride' onclick='formCheck(<%=@cartIPs.to_json.html_safe%>, <%=@cartIDs.to_json.html_safe%>, "route_specs");'></input>
    <% end %>
    <center><p style='margin-top:5%;color:red'><%=@message%></p></center>
  </main>
</body>


